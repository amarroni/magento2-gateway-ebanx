<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="2columns-left" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd" label="Customer My Account (All Pages)" design_abstraction="custom">
    <update handle="customer_account"/>
    <head>
        <title>Manage my saved credit cards informations</title>
        <script src="DigitalHub_Ebanx::js/creditcard/saved.js" />
    </head>
    <body>
        <referenceBlock name="page.main.title">
            <action method="setPageTitle">
                <argument translate="true" name="title" xsi:type="string">Manage my saved credit cards informations</argument>
            </action>
        </referenceBlock>
        <referenceContainer name="content">
            <block class="DigitalHub\Ebanx\Block\CreditCard\Saved" name="digitalhub_ebanx_creditcard_saved" template="DigitalHub_Ebanx::creditcard/saved.phtml" cacheable="false" />
        </referenceContainer>
    </body>
</page>
