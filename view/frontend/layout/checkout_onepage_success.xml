<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="content">
            <block class="Ebanx\Payments\Block\Success\Base" name="onepage.success.ebanx_payments"
                   template="checkout/success.phtml">
                <!-- Brazil -->
                <block class="Ebanx\Payments\Block\Success\Boleto" name="ebanx.success.payment.boleto"
                   as="ebanx_boleto" template="checkout/success/boleto.phtml"/>
                <block class="Ebanx\Payments\Block\Success\Tef" name="ebanx.success.payment.tef"
                       as="ebanx_tef" template="checkout/success/tef.phtml"/>
                <block class="Ebanx\Payments\Block\Success\Creditcard" name="ebanx.success.payment.creditcard"
                       as="ebanx_creditcard" template="checkout/success/creditcard.phtml"/>
                <block class="Ebanx\Payments\Block\Success\Wallet" name="ebanx.success.payment.wallet"
                       as="ebanx_wallet" template="checkout/success/wallet.phtml"/>
                <block class="Ebanx\Payments\Block\Success\Oxxo" name="ebanx.success.payment.oxxo"
                       as="ebanx_oxxo" template="checkout/success/oxxo.phtml"/>
            </block>
        </referenceContainer>
    </body>
</page>
